{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}

<div class="project">
    {% for project in projects %}
    {{ dump(project) }}

    <div class="project-container">
        <div class="container">
            <h2>{{ project.title }}</h2>
            <div class="macbook">
                <div class="project-images">
                    {% for project_image in project.projectImages %}
                        <img src="{{ asset('uploads/projects/' ~ project_image.url)}}" alt="">
                    {% endfor %}
                </div>

            </div>
        </div>
    </div>
    {% endfor %}
    
</div>

<div class="tableofproject">



    <h1>Project index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Client</th>
                <th>Description</th>
                <th>Url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.title }}</td>
                <td>{{ project.client }}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.url }}</td>
                <td>
                    <a href="{{ path('project_show', {'id': project.id}) }}">show</a>
                    <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('project_new') }}">Create new</a>
</div>
{% endblock %}
