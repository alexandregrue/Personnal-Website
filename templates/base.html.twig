<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;400;800&display=swap" rel="stylesheet">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>
    <nav>
        <div class="top-nav">
            <h1 class="animate__animated animate__backInDown"><a href="{{ path('home') }}">AG!</a></h1>
            <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                <i class="fa fa-bars"></i>
            </a>
        </div>
        <div class="nav-link animate__animated animate__slideInDown" id="nav-link">
            <a href="{{ path('skills') }}">Skills</a>
            <a href="{{ path('project_index') }}">Projects</a>
            <a href="{{ path('experience_index') }}">Experiences</a>
            <a href="{{ asset('/uploads/resumes/99284450b549b790549aef0150017ae1.pdf') }}">Resume</a>
        </div>

    </nav>
    {% block body %}{% endblock %}
    <footer>
        <div class="logo-footer">
            <a href="#"><img src="{{ asset('build/images/www.png') }}" alt="My website"></a>
            <a href="https://github.com/alexandregrue"><img src="{{ asset('build/images/github.png') }}" alt="My github"></a>
            <a href="https://www.linkedin.com/in/alexandregrué/"><img src="{{ asset('build/images/linkedin.png') }}" alt="My linkedin"></a>
        </div>
    </footer>
    <script>
        function myFunction() {
            var x = document.getElementById("nav-link");
            if (x.style.display === "flex") {
                x.style.display = "none";
            } else {
                x.style.display = "flex";
            }
        }
    </script>
</body>

</html>