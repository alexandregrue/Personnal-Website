{% extends 'base.html.twig' %}

{% block title %}Skills{% endblock %}

{% block body %}
<section class="stack">
    <div class="languages">
        <div class="container">
            <h2>Languages : </h2>
            <div class="image-container">
                {% for stack in stacks %}

                {% if stack.category == 'Languages' %}
                <img src="{{ asset('uploads/stacks/' ~ stack.url) }}" alt="">

                {% endif %}

                {% endfor %}
            </div>
        </div>
    </div>
    <div class="frameworks">
        <div class="container">
            <h2>Languages : </h2>
            <div class="image-container">
                {% for stack in stacks %}

                {% if stack.category == 'Frameworks' %}
